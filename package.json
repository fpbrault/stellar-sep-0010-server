{
  "name": "stellar-sep-0010-server",
  "version": "0.1.0",
  "description": "JavaScript SEP-0010 Server Reference Implementation",
  "author": {
    "name": "Felix Perron-Brault",
    "email": "fpbrault@gmail.com"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/fpbrault/stellar-sep-0010-server.git"
  },
  "homepage": "https://github.com/fpbrault/stellar-sep-0010-server",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main.js",
    "postinstall": "tsc --sourceMap false",
    "generate-docs": "compodoc -p tsconfig.json -d docs --theme stripe",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "release": "standard-version"
  },
  "dependencies": {
    "@nestjs/common": "8.2.4",
    "@nestjs/config": "1.1.5",
    "@nestjs/core": "8.2.4",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-express": "8.2.4",
    "@nestjs/schedule": "^1.0.2",
    "@nestjs/swagger": "5.1.5",
    "cache-manager": "^3.6.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "dotenv": "^10.0.0",
    "git-cz": "4.8.0",
    "hbs": "4.2.0",
    "jsonwebtoken": "^8.5.1",
    "passport": "0.5.2",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "7.4.0",
    "sodium-native": "^3.3.0",
    "stellar-sdk": "9.1.0",
    "swagger-ui-express": "4.3.0",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@compodoc/compodoc": "1.1.16",
    "@nestjs/cli": "8.1.6",
    "@nestjs/schematics": "8.0.5",
    "@nestjs/testing": "8.2.4",
    "@types/cache-manager": "^3.4.2",
    "@types/cron": "^1.7.3",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.3",
    "@types/node": "17.0.1",
    "@types/passport-jwt": "3.0.6",
    "@types/passport-local": "1.0.34",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "5.7.0",
    "@typescript-eslint/parser": "5.7.0",
    "cross-env": "7.0.3",
    "eslint": "8.5.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.4.5",
    "prettier": "2.5.1",
    "standard-version": "^9.3.2",
    "supertest": "6.1.6",
    "ts-jest": "27.1.2",
    "ts-loader": "9.2.6",
    "ts-node": "10.4.0",
    "tsconfig-paths": "3.12.0",
    "typescript": "4.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  }
}
