{
  "name": "stellar-sep-0010-server",
  "version": "0.0.1",
  "description": "JavaScript SEP-0010 Server Reference Implementation",
  "author": {
    "name": "Felix Perron-Brault",
    "email": "fpbrault@gmail.com"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/fpbrault/stellar-sep-0010-server.git"
  },
  "homepage": "https://github.com/fpbrault/stellar-sep-0010-server",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main.js",
    "postinstall": "tsc --sourceMap false",
    "generate-docs": "compodoc -p tsconfig.json -d docs",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "8.1.0",
    "@nestjs/config": "^1.0.2",
    "@nestjs/core": "8.1.0",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-express": "8.1.0",
    "@nestjs/swagger": "5.1.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "dotenv": "^10.0.0",
    "git-cz": "4.8.0",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.5.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "7.4.0",
    "stellar-sdk": "9.0.1",
    "swagger-ui-express": "^4.1.6",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.15",
    "@nestjs/cli": "8.1.2",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "8.1.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "16.10.8",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.2.5",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "10.3.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "4.4.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  }
}
